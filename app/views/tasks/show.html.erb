<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to "add new task", new_task_path%>

<%= link_to "edit a task", edit_task_path %>

<%= link_to "Return to the list", tasks_path %>


